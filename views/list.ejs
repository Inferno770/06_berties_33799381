    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Here are the books that we sell:</h1>

    <% if (availableBooks.length > 0) { %>

      <ul>
        <% availableBooks.forEach(function(book) { %>
          <li>
            <%= book.name %>, Â£<%= book.price ? parseFloat(book.price).toFixed(2) : 'Price unavailable' %>
          </li>
        <% }); %>
      </ul>

    <% } else { %>

      <p>No books found.</p>

    <% } %>

  </body>
</html>